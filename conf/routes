# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                         controllers.HomeController.index()

# An example controller showing how to use dependency injection
GET     /count                    controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                  controllers.AsyncController.message


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

GET     /databaseTest             controllers.HomeController.databaseTest

#GET from LoginController
GET     /login                    controllers.LoginController.login
GET     /loginSubmit              controllers.LoginController.loginSubmit
GET     /logout                   controllers.LoginController.logout

GET     /managerContact          controllers.HomeController.managerContact
GET     /giveRaise               controllers.HomeController.giveRaise
GET     /employees               controllers.HomeController.employees



GET     /addManager              controllers.HomeController.addManager
POST    /addManagerSubmit        controllers.HomeController.addManagerSubmit
GET     /updateManager/:id       controllers.HomeController.updateManager(id: String)  
GET     /deleteManager/:id       controllers.HomeController.deleteManager(id: String)

GET     /addWorker              controllers.HomeController.addWorker
POST    /addWorkerSubmit        controllers.HomeController.addWorkerSubmit
GET     /updateWorker/:id       controllers.HomeController.updateWorker(id: String)  
GET     /deleteWorker/:id       controllers.HomeController.deleteWorker(id: String)

GET     /addProject               controllers.HomeController.addProject
POST    /addProjectSubmit         controllers.HomeController.addProjectSubmit
GET     /updateProject/:id        controllers.HomeController.updateProject(id: Long)
GET     /deleteProject/:id      controllers.HomeController.deleteProject(id: Long)

GET     /addDepartment          controllers.HomeController.addDepartment
POST    /addDepartmentSubmit    controllers.HomeController.addDepartmentSubmit
GET     /updateDepartment/:id   controllers.HomeController.updateDepartment(id: Long)
GET     /deleteDepartment/:id   controllers.HomeController.deleteDepartment(id: Long)